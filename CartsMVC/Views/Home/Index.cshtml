@model List<CartsMVC.Models.Product>

@section styles
{
    <style>
        .ProductImg {
            height: 300px;
        }
    </style>
}

<div class="jumbotron">
    <h2>IT鐵人購物網站 - 甚麼都沒有，甚麼都沒賣。</h2>
    <h6><span></span> @Html.ActionLink("關於網站", "About", new { }, new { @class = "btn btn-primary btn-lg" }) </h6>
</div>

<div class="row">
    @foreach (var product in this.Model) { 
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <a href="@Url.Action("Details", new {id = product.Id})">
                    <img class="ProductImg" src="@product.DefaultImageURL" alt="商品圖片">
                </a>
                <div class="caption">
                    <h3>@product.Name</h3>
                    <p>@Html.Raw(product.Description)</p>
                    <p>售價 : @product.Price</p>
                    <p>庫存 : @product.Quantity</p>
                    <p>
                        <a onclick="AddToCart('@product.Id')" href="javascript:void(0);"
                           @{ var disable = product.Quantity <= 0 ? "disabled" : ""; }
                           @disable
                           class="btn btn-primary" role="button">加入購物車
                        </a>
                        <a href="@Url.Action("Details", new {id = product.Id})" class="btn btn-default" role="button">
                            詳細資訊
                        </a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>
